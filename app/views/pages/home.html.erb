<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.squarespace-cdn.com/content/v1/5b10053a2487fdb5e3fe4b16/1532434418666-NN9YN6901LFCO43GZYBZ/ke17ZwdGBToddI8pDm48kMW-P9pta-BYWZxEMI3BKYl7gQa3H78H3Y0txjaiv_0fDoOvxcdMmMKkDsyUqMSsMWxHk725yiiHCCLfrh8O1z4YTzHvnKhyp6Da-NYroOW3ZGjoBKy3azqku80C789l0p4Wyba38KfG317vYluk45-p5WWTS4f4Tp1l_ud6gYH9Cc-xG3LLbueyNfhvXi2kmg/2-L1009592-Edit.jpg?format=2500w')">
<div class="container"><h1>GroundBnB</h1>
<p>Rent an allotment through GroundBnB to grow your own fruit and vegetables</p></div></div>

<%= form_tag allotments_path, method: :get do %>
<div class="search-form-control form-group">
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an allotment"
  %>
  <%= submit_tag "Search", class: "btn btn-flat" %>
  </div>
<% end %>


  <div class="container top-allotments-container">
    <h3>Top-rated Allotments</h3>
    <div class="row">
      <% @allotments.each do |allotment| %>
        <div class="col card-trip">
          <% if allotment.photos.attached? %>
            <%= cl_image_tag(allotment.photos.first.key, crop: :fill) %>
          <% else %>
            <img src= "https://images.unsplash.com/photo-1416879595882-3373a0480b5b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80" alt="" width="400" height="300">
          <% end %>
            <%= link_to allotment_path(allotment) do%>
        <div class="card-trip-infos">
          <div><%= allotment.name %></div>
          <div>Location: <%= allotment.location %></div>
          <div><%= allotment.description %></div>
          <div>Size: <%= allotment.area_size %>m<sup>2</sup></div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

