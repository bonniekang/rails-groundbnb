<h1>Groundbnb</h1>
<p>Rent an allotment through Groundbnb to grow your own fruit and vegetables</p>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1611843467160-25afb8df1074?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80')"><div class="container"><h1>main photo</h1></div></div>

<h1>Search</h1>
<%= simple_form_for :search, url: allotments_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :location, input_html: {value: ""} %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<h3>Top-rated Allotments</h3>
  <div class="container">
    <div class="row">
      <% @allotments.each do |allotment| %>
        <div class="col card-trip">
          <% if allotment.photos.attached? %>
            <%= cl_image_tag(allotment.photos.first.key, crop: :fill) %>
          <% else %>
            <img src= "https://images.unsplash.com/photo-1416879595882-3373a0480b5b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80" alt="" width="400" height="300">
          <% end %>
        <div class="card-trip-infos">
          <div><%= allotment.name %></div>
          <div><%= allotment.location %></div>
          <div><%= allotment.description %></div>
          <div><%= allotment.area_size %></div>
          <div><%= link_to "Find more", allotment_path(allotment) %></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

